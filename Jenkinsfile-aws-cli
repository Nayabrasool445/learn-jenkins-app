pipeline {
    agent any

    stages {
        stage('Building Images') {
            agent{
                docker{
                    image 'amazon/aws-cli'
                    reuseNode true
                }
            }
            steps {
                sh '''
                amazon-linux-extras install docker
                docker --version
                docker build -f AWS/Dockerfile-aws-cli -t my-aws-cli . 
                '''
            }
        }
    }
}


