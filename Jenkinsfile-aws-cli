pipeline {
    agent any

    stages {
        stage('Building Images') {
            agent{
                docker{
                    image 'amazon/aws-cli'
                    reuseNode true
                }
            }
            steps {
                sh '''
                sudo amazon-linux-extras install docker
                sudo docker --version
                sudo docker build -f AWS/Dockerfile-aws-cli -t my-aws-cli . 
                '''
            }
        }
    }
}


