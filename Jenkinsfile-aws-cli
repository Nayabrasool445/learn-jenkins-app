pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh "echo 'without docker'"
                sh "ls -la"
                sh "touch container-no.text"

            }
        }
        stage('w docker') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh "echo 'with docker'"
                sh "npm --version"
                sh "ls -la"
                sh "touch container-yes.text"                
            }
        } 
    }
}


